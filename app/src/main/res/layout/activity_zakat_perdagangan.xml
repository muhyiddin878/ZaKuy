<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    tools:context=".ZakatPerdagangan"
    android:padding="16dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Hitung Zakat Perdagangan"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Total Nilai Dagang Barang"
            android:textColorHint="@color/green"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/totalnilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/blue"
                android:textSize="13dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Hutang Dagang"
            android:textColorHint="@color/green"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/hutangdagang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/red"
                android:textSize="13dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Laba Bersih"
            android:textColorHint="@color/green"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/lababersih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/green"
                android:textSize="13dp" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button2"
        android:text="Mulai Hitung Zakat" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/hasil"
        android:visibility="gone"/>



    <LinearLayout

        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_button"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <TextView
                android:id="@+id/nilaizakat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal Zakat : "
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hasilnilai"
                android:text=""
                android:textColor="@color/green"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/nilaizakat"
                android:textStyle="bold"

                />


        </RelativeLayout>



    </LinearLayout>


    <Button
        android:id="@+id/buttonreset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button3"
        android:text="Reset" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/reset"
        android:visibility="gone"/>

</LinearLayout>