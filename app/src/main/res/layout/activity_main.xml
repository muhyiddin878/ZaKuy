<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"/>


    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/carouselView"
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp">

            <ImageView
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logoprofesi3"
                android:background="@android:color/white"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_view"
            android:layout_marginLeft="30dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp">

            <ImageView
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logobinatang3"
                android:background="@android:color/white"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_below="@id/card_view"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp">

            <ImageView
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logoperdagangan3"
                android:background="@android:color/white"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_view"
            android:layout_below="@id/card_view2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp">

            <ImageView
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logotemuan3"
                android:background="@android:color/white"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_below="@id/card_view3"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp">

            <ImageView
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logopertanian3"
                android:background="@android:color/white"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_view"
            android:layout_below="@id/card_view4"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp">

            <ImageView
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logoemas3"
                android:background="@android:color/white"/>


        </android.support.v7.widget.CardView>



    </RelativeLayout>




</RelativeLayout>