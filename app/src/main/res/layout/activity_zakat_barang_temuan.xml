<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg_3"
    tools:context=".ZakatBarangTemuan"
    android:padding="16dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Hitung Zakat Barang Temuan"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />





        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Jumlah harga Barang Temuan"
            android:textColorHint="@color/green"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:counterTextAppearance="@style/counterText"
            app:counterOverflowTextAppearance="@style/counterOverride">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/jumlahhargatemuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/red"
                android:textSize="16dp"
                android:maxLength="10"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button2"
        android:text="Mulai Hitung Zakat" />




    <LinearLayout

        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_button"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/nilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal Zakat   : "
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView


                android:layout_below="@+id/nisab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hasilnilai"
                android:text=""
                android:maxLength="12"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/nilai"
                android:textStyle="bold"

                />


        </RelativeLayout>



    </LinearLayout>


    <Button
        android:id="@+id/buttonreset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button3"
        android:text="Reset" />
    <Button
        android:id="@+id/buttonnishab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_4"
        android:text="Lihat Nishab" />


</LinearLayout>